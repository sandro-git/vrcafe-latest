---
// src/pages/test-images.astro
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const experiences = await getCollection("experiences");
---

<html>
  <head>
    <title>Test des images</title>
  </head>
  <body class="p-8">
    <h1 class="text-2xl font-bold mb-4">Test des images migr√©es</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {
        experiences.map((exp) => (
          <div class="border p-4 rounded">
            <h2 class="text-xl font-semibold">{exp.data.name}</h2>
            <Image
              src={exp.data.image}
              alt={exp.data.name}
              width={400}
              height={400}
              format="avif"
              class="mt-2 rounded"
            />
          </div>
        ))
      }
    </div>
  </body>
</html>
