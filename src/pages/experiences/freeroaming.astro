import { sanityClient } from "sanity:client";
//components
import BaseLayout from "../../layouts/BaseLayout.astro";

import type { SanityDocument } from "@sanity/client";

//data
const gamesSanity: SanityDocument = await sanityClient.fetch(`*[_type == "escapeGames" && tag == "freeroaming"]`);

//components
import Title from "../../components/Title.astro";
import GameList from "../../components/GameList.astro";
//data
---

<!-- TO DO :netlify cloudinary integration to optimize images -->
<BaseLayout>
  <Title title="Free Roaming VR" />
  <GameList games={gamesSanity} />
</BaseLayout>
