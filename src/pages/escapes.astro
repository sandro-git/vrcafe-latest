//components
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import GameList from "../components/GameList.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import GamesLayout from "../layouts/GamesLayout.astro";
import { getCollection } from "astro:content";
const experiences = await getCollection(
  "experiences",
  ({ data }) => data.tag === "escapeGame"
);
import ImageComponent from "../components/MycustomImage.astro";
---

<BaseLayout>
  <GamesLayout>
    {
      experiences.map((exp) => (
        <ImageComponent imagePath={exp.data.image} altText={exp.data.name} />
        // <pre class="text-white">{exp.data.image}</pre>
      ))
    }
    <!-- <GameList experiences={escapes} /> -->
  </GamesLayout>
</BaseLayout>
