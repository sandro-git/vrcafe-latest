---
// src/pages/test-content.astro
import { getCollection } from "astro:content";

// Récupérer toutes les expériences
const experiences = await getCollection("experiences");
---

<html>
  <head>
    <meta charset="UTF-8" />
    <title>Test Content Collections</title>
  </head>
  <body>
    <h1>Expériences migrées</h1>
    <ul>
      {
        experiences.map((exp) => (
          <li>
            <h2>{exp.data.name}</h2>
            <p>Tag: {exp.data.tag}</p>
            <p>Éditeur: {exp.data.editeur}</p>
            <img src={exp.data.image} width="200" alt={exp.data.name} />
          </li>
        ))
      }
    </ul>
  </body>
</html>
