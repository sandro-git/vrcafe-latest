---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.
import { getCollection } from "astro:content";

//components
import LandingImage from "@components/LandingImage.astro";
import Title from "@components/Title.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import GameList from "@components/GameList.astro";
import Pricing from "@components/Pricing.astro";

//data
const games = await getCollection("games");
const jeux = await getCollection("jeux");
const freeroaming = await getCollection("freeroaming");
---

<BaseLayout>
  <LandingImage />
  <Title title="Escape Games VR" />
  <GameList games={games} />
  <Title title="Jeux VR" />
  <GameList games={jeux} />
  <Title title="Free roaming" />
  <GameList games={freeroaming} />
  <Title title="Tarifs" />
  <Pricing />
</BaseLayout>
